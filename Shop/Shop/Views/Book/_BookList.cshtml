@model IEnumerable<Shop.Models.Book>
@using Shop.Infrastructure

<table>
    @foreach (var book in Model)
    {
        if (book.Hidden != true)
        {
            <br />
            <br />
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Book", new { id = book.BookId })">
                        <article style="background-image:url(@Url.BookImagesPath(book.IcoName))" id="bookCategories">

                            @if (book.Bestseller)
                            {
                                <div id="bestsellerIco" style="background-image:url(@Url.Content("~/Content/Images/Index/bestseller.png"))"></div>
                            }


                        </article>
                    </a>
                </td>

                <td>
                    <h6 id="TitleAndAuthor">@book.Title - @book.Author</h6>
                </td>
                
                <td>
                    <a href="@Url.Action("AddToCart", "Cart", new { id = book.BookId })" class="buy_buttonCategories">Add To Cart</a>

                </td>
            </tr>
        }
        else if (User.IsInRole("Admin"))
        {
            <br />
            <br />
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Book", new { id = book.BookId })">
                        <article style="background-image:url(@Url.BookImagesPath(book.IcoName))" id="bookCategories">

                            @if (!book.Bestseller)
                            {
                                <div id="bestsellerIco" style="background-image:url(@Url.Content("~/Content/Images/Index/bestseller.png"))"></div>
                            }


                        </article>
                    </a>
                </td>

                <td>
                    <h6 id="TitleAndAuthor">@book.Title - @book.Author</h6>
                </td>
                <td>
                    <a href="@Url.Action("AddToCart", "Cart", new { id = book.BookId })" class="buy_buttonCategories">Add To Cart</a>

                </td>
            </tr>
        }
    }
</table>